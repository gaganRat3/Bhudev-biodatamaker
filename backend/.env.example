# Django Email Configuration
# Copy this file to .env and fill in your actual values

# Email Backend (use console for testing, smtp for production)
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# For testing without sending real emails, use:
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Server Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Gmail Account (or other SMTP service)
EMAIL_HOST_USER=your-email@gmail.com

# Gmail App Password (NOT your regular password!)
# To generate: https://myaccount.google.com/apppasswords
# Enable 2FA first, then create an App Password
EMAIL_HOST_PASSWORD=xxxx xxxx xxxx xxxx

# Default From Email
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Django Secret Key
SECRET_KEY=your-secret-key-here

# Debug Mode
DEBUG=True
